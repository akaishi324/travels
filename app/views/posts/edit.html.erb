<h1>id: <%= @post.id %> のメッセージ編集ページ</h1>
<%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
          <%= render 'layouts/error_messages', model: f.object %>
          <%= f.label :area, '地域' %>
          <%= f.select :area,[["アジア","アジア"], ["ヨーロッパ","ヨーロッパ"], ["北アメリカ","北アメリカ"], ["南アメリカ","南アメリカ"], ["オセアニア","オセアニア"], ["アフリカ","アフリカ"]], class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :country, '国' %>
          <%= f.text_field :country, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :place, '場所' %>
          <%= f.text_field :place, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group text-justify">
          <%= f.label :comment, 'コメント' %>
          <%= f.text_area :comment, class: 'form-control', rows: 5 %>
        </div>
        <div class="field">
        <%= f.label :photo, "photo" %>
        <%= f.file_field :photo %>
        </div>
         <div class="form-group">
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
        </div>
<% end %>
 <% if @current_user == @post.user %>
        <div class="form-group">
            <%= link_to "Delete", @post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
         </div>
 <% end %>
       
