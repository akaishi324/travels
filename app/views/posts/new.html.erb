<%= form_with(model: @post, local: true) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :area, '地域' %>
          <%= f.select :area,[["アジア","アジア"], ["ヨーロッパ","ヨーロッパ"], ["北アメリカ","北アメリカ"], ["南アメリカ","南アメリカ"], ["オセアニア","オセアニア"], ["アフリカ","アフリカ"]], :prompt => "選択してください", class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :country, '国' %>
          <%= f.text_area :country, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :place, '観光場所' %>
          <%= f.text_area :place, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :comment, 'メッセージ' %>
          <%= f.text_area :comment, class: 'form-control', rows: 5 %>
        </div>
        <div class="field">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
        </div>
        <div class="form-group">
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
        </div>
<% end %>
