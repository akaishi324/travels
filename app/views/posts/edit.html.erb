<h1>id: <%= @post.id %> のメッセージ編集ページ</h1>
<%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :area, 'メッセージ' %>
          <%= f.text_area :area, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :country, 'メッセージ' %>
          <%= f.text_area :country, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :place, 'メッセージ' %>
          <%= f.text_area :place, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :comment, 'メッセージ' %>
          <%= f.text_area :comment, class: 'form-control', rows: 5 %>
        </div>
        <div class="field">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
<% end %>
 <% if @current_user == @post.user %>
            <%= link_to "Delete", @post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
       
